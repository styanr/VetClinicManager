<Window x:Class="VetClinicManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinicManager"
        xmlns:views="clr-namespace:VetClinicManager.View"
        xmlns:userControls="clr-namespace:VetClinicManager.View.UserControls"
        mc:Ignorable="d"
        Title="VetClinic" Height="450" Width="850"
        MinHeight="200" MinWidth="850"
        
        >
    

    <Grid>
        <TabControl>
            <TabItem Header="Patients">
                <views:PatientsView  />
            </TabItem>
            <TabItem Header="Clients" >
                <userControls:ClientsView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
